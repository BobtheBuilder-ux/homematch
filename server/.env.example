# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/homematch_db?schema=public"
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20000

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=3002
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (AWS SES)
AWS_SES_REGION=us-east-1
FROM_EMAIL=noreply@homematch.ng

# Payment Configuration (Paystack)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Monitoring and Performance
SENTRY_DSN=your_sentry_dsn

# Rate Limiting Configuration (optional - defaults are set in code)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=20
PAYMENT_RATE_LIMIT_MAX=10
SEARCH_RATE_LIMIT_MAX=50
ADMIN_RATE_LIMIT_MAX=200

# Cache Configuration (optional - defaults are set in code)
CACHE_TTL_PROPERTIES=600
CACHE_TTL_SINGLE_PROPERTY=1800
CACHE_TTL_APPLICATIONS=300
CACHE_TTL_ANALYTICS=3600

# Performance Monitoring
PERFORMACE_LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=100
SLOW_REQUEST_THRESHOLD_MS=1000